[flake8]
max-line-length = 119
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    *.md,
    *.txt,
    *.yml,
    *.yaml,
    *.json,
    *.xml,
    *.html,
    *.css,
    *.js,
    manage.py,
    */tests/*,
    */test_*.py,
    */migrations/*,
    */static/*,
    */media/*,
    */templates/*,
    */__pycache__/*,
    */node_modules/*,
    */dist/*,
    */build/*,
    */docs/*,
    */locale/*,
    .cache,
    .coverage,
    .tox,
    .pytest_cache,
    *.egg-info,
    *.log,
    *.sqlite3,
    *.db,
    *.pyc,
    settings.py,
    urls.py,
    wsgi.py,
    asgi.py
ignore =
    E501,
    W503,
    E203,
    F401,
    F403,
    E402,
    C901
per-file-ignores =
    */migrations/*:E501,W503
    */tests/*:S101
    */settings/*:E501
    */urls.py:W503,E501